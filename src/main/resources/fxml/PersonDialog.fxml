<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane fx:id="dlgPane" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.realtimecc2.gui.PersonDialogController">
   <header>
      <VBox prefHeight="49.0" prefWidth="400.0">
         <children>
            <Label fx:id="lblTitle" alignment="CENTER" prefHeight="23.0" prefWidth="405.0" text="Titel">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="437.0" text="Alle Felder müssen ausgefüllt werden" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </header>
   <content>
      <VBox prefWidth="400.0">
         <children>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Vorname :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtVorname" prefWidth="250.0" promptText="Vorname" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="20.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Nachname :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtNachname" prefWidth="250.0" promptText="Nachname" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="50.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Position :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtPosition" prefWidth="250.0" promptText="Position" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="80.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Standort :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtStandort" prefWidth="250.0" promptText="Standort" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="110.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="E Mail :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtEmail" prefWidth="250.0" promptText="E-Mail Adresse" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="140.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Telefon :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtTelefon" prefWidth="250.0" promptText="Telefonnummer" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="170.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Benutzername :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtBenutzer" disable="true" editable="false" prefWidth="149.0" />
                  <Button fx:id="btnCreateUser" mnemonicParsing="false" text="Erzeugen">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="200.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Passwort :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <PasswordField fx:id="txtPasswort" disable="true" editable="false" />
                  <Button fx:id="btnCreatePw" mnemonicParsing="false" text="Erzeugen">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="230.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="120.0" text="Rolle :">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="cbRolle" prefWidth="150.0" />
               </children>
            </HBox>
         </children></VBox>
   </content>
</DialogPane>
