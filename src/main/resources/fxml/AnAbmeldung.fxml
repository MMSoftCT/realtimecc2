<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.realtimecc2.gui.AnAbmeldungController">
    <VBox prefHeight="49.0" prefWidth="400.0">
        <children>
            <Label fx:id="lblTitle" alignment="CENTER" prefHeight="23.0" prefWidth="405.0" text="ComeCave Zeiterfassung">
                <font>
                    <Font name="Arial Bold" size="20.0" />
                </font>
            </Label>
            <Label fx:id="lblName" alignment="CENTER" prefHeight="17.0" prefWidth="405.0" text="Name">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <HBox prefHeight="30.0" prefWidth="200.0">
                <children>
                    <Button fx:id="btnAktion" mnemonicParsing="false" text="Anmelden">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="btnStatistik" mnemonicParsing="false" text="Monatsübersicht">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </Button>
               <Button fx:id="btnClose" mnemonicParsing="false" onAction="#close" text="Schließen">
                  <HBox.margin>
                     <Insets left="10.0" />
                  </HBox.margin>
               </Button>
                </children>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
            </HBox>
            <Label fx:id="taMessage" prefWidth="405.0" text="Label">
                <font>
                    <Font size="14.0" />
                </font>
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            </Label>
        </children>
    </VBox>
</AnchorPane>
